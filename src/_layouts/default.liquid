<!doctype html>
<html lang="es">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="min-h-screen antialiased {{ page.layout }} {{ page.page_class }}">
    <section class="flex flex-nowrap">
      {% render "sidebar", metadata: site.metadata, page: page %}

      <main class="flex-auto overflow-hidden text-gray-700">
        {% render "sidebar_mobile", metadata: site.metadata, page: page %}
        {{ content }}
      </main>
    </section>

  </body>
</html>
